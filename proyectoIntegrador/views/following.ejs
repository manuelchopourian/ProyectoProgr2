<%- include('./partials/header')  %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			
            <div class="col-12">
				<% if(follow.length == 0){ %> 
					<% if(usuario.id != locals.user.id){ %> 
						<h2 class="products-title"><%= usuario.nombre_usuario %> no tiene seguidos</h2>
						<% } else{ %> 
							<h2 class="products-title">No tienes seguidos</h2>
						 <% } %> 
			   <% } else{ %> 
					<% if(usuario.id != locals.user.id){ %> 
						<h2 class="products-title">Seguidos de <%= usuario.nombre_usuario %></h2>
						<% } else{ %> 
							<h2 class="products-title">Tus seguidos</h2>
						 <% } %> 
				   <% } %> 
			</div>
			<% for (let i = 0; i < follow.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="profile-box">
						<a href='/profile/id/<%= follow[i].following.id %>'>
							<figure class="profile-box_image">
								<img src= "/images/profiles/<%= follow[i].following.url_imagen_usuario %>"  alt='<%= follow[i].following.nombre_usuario%> '>
							</figure>
							<article class="profile-box_data">
								<h2>
										 <%=follow[i].following.nombre_usuario%>
								</h2>						
							</article>
						</a>
					</section>
				</div>
				<%  } %> 
        </div>
			
			

	<%- include('./partials/footer')  %> 
