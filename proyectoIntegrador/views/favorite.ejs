<%- include('./partials/header')  %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			
            <div class="col-12">
				<% if(favoritos.length == 0){ %> 
					<h2 class="products-title">No tienes productos favoritos</h2>
			   <% } else{ %> 
						<h2 class="products-title">Mis favoritos</h2>
				   <% } %> 
			</div>
			<% for (let i = 0; i < favoritos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href='/product/id/<%= favoritos[i].products.id %>'>
							<figure class="product-box_image">
								<img src= "/images/products/<%= favoritos[i].products.url_imagen_producto %>"  alt='<%= favoritos[i].products.producto%> '>
							</figure>
							<article class="product-box_data">
								<h2>
									<% if(favoritos[i].products.categoria == null){ %> 
										 <%=favoritos[i].products.nombre%>
									<% } else{ %> 
										<%=favoritos[i].products.categoria + " " + favoritos[i].products.nombre%>
										<% } %> 
	
								</h2>
								<p><%= favoritos[i].products.descripcion  %> </p>
								<p> <%= favoritos[i].products.comentarios%>  Comentarios</p>
							</article>
						</a>
					</section>
				</div>
				<%  } %> 
        </div>
			
			

	<%- include('./partials/footer')  %> 
